<%= form_with(model: email, class: "form-horizontal", role: "form") do |form| %>
  <% if email.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(email.errors.count, "error") %> prohibited this email from being saved:</h2>

      <ul>
        <% email.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :object, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_field :object, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :body, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_area :body, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class=" col-sm-10">
      <%= form.submit class: "btn btn-success"%>
      <%= link_to "Back to emails", emails_path,  class: "btn btm-sm btn-info" %>
    </div>
  </div>
<% end %>

